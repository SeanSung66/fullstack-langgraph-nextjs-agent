# ===========================================
# Application Configuration
# ===========================================
NEXT_PUBLIC_API_BASE_URL=/api/agent

# Application port (default: 3000)
APP_PORT=3000

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=mydb

# For local development (connecting from host machine)
# DATABASE_URL=postgresql://user:password@localhost:5434/mydb?schema=public

# For Docker deployment (connecting between containers)
# Note: This is automatically set in compose.yaml, no need to change
# DATABASE_URL=postgresql://user:password@db:5432/mydb?schema=public

# ===========================================
# LLM API Keys
# ===========================================
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ===========================================
# S3-Compatible Object Storage Configuration
# ===========================================
# MinIO credentials (used by both MinIO service and app)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# S3 bucket configuration
S3_BUCKET_NAME=uploads
S3_REGION=us-east-1

# For local development (connecting from host machine)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY_ID=minioadmin
# S3_SECRET_ACCESS_KEY=minioadmin
# S3_FORCE_PATH_STYLE=true

# For Docker deployment (connecting between containers)
# Note: These are automatically set in compose.yaml
# S3_ENDPOINT=http://minio:9000
# S3_ACCESS_KEY_ID=${MINIO_ROOT_USER}
# S3_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}
# S3_FORCE_PATH_STYLE=true

# ===========================================
# Production Configuration (AWS S3)
# ===========================================
# For production with AWS S3, update to:
# S3_ENDPOINT=  # Leave empty for AWS S3
# S3_ACCESS_KEY_ID=your_aws_access_key
# S3_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_FORCE_PATH_STYLE=false

# ===========================================
# CORS Configuration (for external UI access)
# ===========================================
# Comma-separated list of allowed origins
# Use "*" to allow all origins (development only, not recommended for production)
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173
# For production:
# CORS_ALLOWED_ORIGINS=https://my-ui.example.com,https://app.example.com
